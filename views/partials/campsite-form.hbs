<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{campsite.name}}" >
</div>
<div class="form-row mb-3">
  <label class="form-label" for="categoryId">Category</label>
  <select class="form-control" id="categoryId" name="categoryId">
    {{#each categories}}
  <option value="{{this._id}}" {{#ifCond this._id ../campsite.categoryId}} selected {{/ifCond}}>
  {{this.name}}
  </option>
    {{/each}}
  </select>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="tel">Tel</label>
  <input class="form-control" type="text" name="tel" id="tel" placeholder="Enter tel" value="{{campsite.phone}}"> 
  value
</div>
<div class="form-row mb-3">
  <label class="form-label" for="address">Address</label>
  <input class="form-control" type="text" name="address" id="address" placeholder="Enter address"
    value="{{campsite.location}}"> 
</div>
<div class="form-row mb-3">
  <label class="form-label" for="openingHours">Opening Hours</label>
  <input class="form-control" type="time" name="openingHours" id="openingHours" placeholder="Enter opening hours"
    value="{{campsite.rating}}"> 
<div class="form-row mb-3">
  <label class="form-label" for="description">Description</label>
  <textarea class="form-control" id="description" name="description" rows="3">{{campsite.description}}</textarea>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="image">照片</label>
  <input class="form-control" type="file" class="form-control-file" id="image" name="image">
</div>
<button type="submit" class="btn btn-primary">提交</button>