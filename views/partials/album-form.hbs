<div style="width: 960px;  margin: auto; background:white; position:relative;">
  <div class="container d-flex">
    <div class="w-28 h-25 mt-3 image-center">
      <img {{#if album.cover}}src="{{album.cover}}"{{else}}src="https://fakeimg.pl/150/?text=封面&font=noto"{{/if}} class="img-thumbnail avatar"
        style="object-fit:cover;height: 150px; width: 150px;position:relative;" alt="user-image">
      <label class="form-label icon" for="image">
        <h1 class="" style=""><i class="fa-solid fa-circle-plus" style="color: white;"></i>
        </h1>
      </label>
      <input class="form-control addImage" type="file" id="image" name="image" style="display:none">
    </div>
    <div class="m-4 mt-5">
      <label class="form-label" for="name">相簿名稱<span style="color:red;">*</span></label>
      <input class="form-control" type="text" name="name" id="name" value="{{album.name}}"placeholder="未命名相簿" style="width: 600px;">
      <div class="name-alert mt-2" style="font-size:16px; color:gray;">0/50字</div>
      {{!-- 選擇露營區 --}}
      <label for="campsite" class="mt-4">露營區<span style="color:red;">*</span></label>
      <input list="campsites" class="form-control" id="campsite" style="width:150px;" value="{{campsite}}">
      <datalist id="campsites">
        {{#each campsites}}
        <option data-value="{{this._id}}" value="{{this.name}}" class="option"></option>
        {{/each}}
      </datalist>
      <input type="hidden" name="campsiteId" id="answerInput-hidden" value="{{album.campsiteId}}">
      {{!-- 相簿描述 --}}
      <label class="form-label mt-3" for="description">相簿描述</label>
      <textarea rows="5" cols="80" class="form-control" type="text" name="description" id="description"
        placeholder="介紹一下這本相簿的內容…" value="{{album.description}}"></textarea>
      <div class="description-alert mt-2" style="font-size:16px; color:gray;">0/300字</div>
    </div>
  </div>
  {{!-- 新增照片 --}}
  <label class="form-label ms-5" for="photoFile">
    <div class="btn btn-primary mt-5">+新增照片</div>
  </label>
  <div class="inputPhoto">
    <input class="form-control photo" type="file" id="photo" name="photo" style="display:none" multiple>
    <input class="form-control" type="file" id="photoFile" name="photoFile" style="display:none" multiple>
  </div>
  <div class="d-flex justify-content-start flex-wrap photo-area">
    {{#each album.photo}}
      <div class="image-center m-3 " number="{{index}}" style="width:30%" ;><img src="{{this}}"
          alt="photo" class="avatar img-thumbnail" style="object-fit:cover;height: 250px; width:100%">
        <h1><i class="fa-solid fa-trash-can exist" style="color: gray;"></i></h1>
      </div>
    {{/each}}
    <input class="exist-photo" name="existPhoto" type="hidden" value="{{stringPhoto}}" >
  </div>
  <input type="hidden" name="userId" value="{{user._id}}" />
  <button type="submit" class="btn btn-primary submit" style="position: absolute; top:5%; right:5%">建立</button>
</div>