<nav class="mt-3 d-flex justify-content-center" aria-label="page navigation">
  <ul class="pagination">
    {{!-- 上一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
      <a class="page-link" href="/album/{{album._id}}?page={{pagination.prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{!-- 頁數 --}}
    {{#each pagination.pages}}
    {{!-- 如果是當前頁數就重新載入 --}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{!-- 如果不是當前頁數就到該頁數 --}}
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/album/{{../album._id}}?page={{this}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    {{!-- 下一頁 --}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/album/{{album._id}}?page={{pagination.next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>