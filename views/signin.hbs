<div class="row mt-5 ">
  <div class="col-md-6 m-auto">
    <div class="card card-body login">
      <h1 class="text-center mt-3">登入</h1>
      {{> message}}
      <form action="/signin" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入信箱">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼">
        </div>
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-secondary btn-block btn-major" style="">登入</button>
        <a href="/auth/facebook" class="btn btn-primary btn-block facebook-login ms-3">Facebook 登入</a>
        </div>
      </form>
      <p class="lead mt-4 d-flex justify-content-center">
        還沒有帳號? <a href="/signup" class="text-info">註冊</a>
      </p>
    </div>
  </div>
</div>